<div class="container">

  <h1>Edit Equipment</h1>

  <%= form_for @equipment do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :current_daily_cost %>
    <%= f.number_field :current_daily_cost %><br>

    <%= f.label :description %>
    <%= f.text_area :description %><br>

    <%= f.label :availability %>
    <%= f.text_field :availability %><br>

    <%= f.submit "Save" %>

    <%= link_to "Back to Inventory", equipment_index_path %>

  <% end %>

</div>