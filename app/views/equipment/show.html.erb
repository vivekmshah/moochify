<h1><%= @equipment.name %></h1>

<%= @equipment.current_daily_cost %><br>
<%= @equipment.description %><br>
<%= @equipment.availability %>

<%#= image_tag @equipment.avatar.url %>
<%= image_tag @equipment.avatar.url(:medium) %>
<%#= image_tag @equipment.avatar.url(:thumb) %>

<%= form_tag orders_path do %>

  <%= date_field_tag :start_date, nil  %>
  <%= date_field_tag :end_date, nil  %>
  <%= hidden_field_tag :equipment_id, @equipment.id %>

  <%= submit_tag "Place order" %>

<% end %>


