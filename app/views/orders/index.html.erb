
  <h1>Order History</h1>

  <% @orders.each do |o| %>
	    
	    <h1>****</h1>

	    <h3>Equipment</h3>

  		<% equipment = Equipment.find(o.equipment_id) %>
	    <p>Equipment<%= equipment.name %></p>
      <%= image_tag equipment.avatar.url(:thumb) %>
	    
	    <h3>Order Details</h3>

	    <p>Start date: <%= o.start_date %></p>
	    <p>End date: <%= o.end_date %></p>
	    <p>Daily rate: <%= number_to_currency(o.daily_cost) %></p>
	    <% dayCount = (o.end_date - o.start_date).to_i %>
	    <p>Number of days: <%= dayCount %></p>
	    <p>Total cost: <%= o.daily_cost * dayCount %></p>

	    <h3>Neighbor</h3>

  		<% neighbor = User.find(o.user_id) %>
	    <p>Name<%= neighbor.first_name %> <%= neighbor.last_name %></p>
      <%= image_tag neighbor.avatar.url(:thumb) %>

	    <h3>Owner</h3>

  		<% owner = User.find(equipment.user_id) %>
	    <p>Name<%= owner.first_name %> <%= owner.last_name %></p>
      <%= image_tag owner.avatar.url(:thumb) %>


  <% end %>

