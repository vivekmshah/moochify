<%= form_for @user do |f| %>

<%= f.text_field :first_name, placeholder: "First name" %><br>
<%= f.text_field :last_name, placeholder: "Last name" %><br>
<%= f.text_field :email, placeholder: "Email" %><br>
<%= f.text_field :phone, placeholder: "Phone Number" %><br>
<%= f.text_field :address_1, placeholder: "Address 1" %><br>
<%= f.text_field :address_2, placeholder: "Address 2" %><br>
<%= f.text_field :city, placeholder: "City" %><br>
<%= f.text_field :state, placeholder: "State" %><br>
<%= f.text_field :zip, placeholder: "Zip" %><br>
<%= f.text_field :bio, placeholder: "Bio" %><br>

<%= f.submit "Edit Account" %>

<%end%>
